<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="org.elliotglaysher.lifecounter"
      android:versionCode="8" android:versionName="1.2">
    <uses-sdk android:targetSdkVersion="11" android:minSdkVersion="4"/>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".LifeCounter"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Settings"
                  android:label="@string/settings_label">
        </activity>        
        <activity android:name=".coin2d.Coin2DActivity"
                  android:label="@string/coin_label"
                  android:theme="@android:style/Theme.Translucent" >
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
</manifest> 
