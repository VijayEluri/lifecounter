<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lifeLayout="http://schemas.android.com/apk/res/org.elliotglaysher.lifecounternonfree"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="horizontal">
    
    <LinearLayout android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".06">
    </LinearLayout>
    
    <org.elliotglaysher.lifecounternonfree.widgets.LifeLayout
        android:id="@+id/player_1_layout"
        android:layout_height="fill_parent"
        android:layout_width="0dip"
        android:layout_weight=".25"
        android:orientation="vertical"
        lifeLayout:nameShown="true" />
        
    <LinearLayout android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".06">
    </LinearLayout>    
        
    <org.elliotglaysher.lifecounternonfree.widgets.LifeLayout
        android:id="@+id/player_2_layout"
        android:layout_height="fill_parent"
        android:layout_width="0dip"
        android:layout_weight=".25"
        android:orientation="vertical"
        lifeLayout:nameShown="true" />
        
    <LinearLayout android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".06">
    </LinearLayout>
        
    <org.elliotglaysher.lifecounternonfree.widgets.LifeLayout
        android:id="@+id/player_3_layout"
        android:layout_height="fill_parent"
        android:layout_width="0dip"
        android:layout_weight=".25"
        android:orientation="vertical"
        lifeLayout:nameShown="true" />
        
    <LinearLayout android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight=".06">
    </LinearLayout>
        
</LinearLayout>