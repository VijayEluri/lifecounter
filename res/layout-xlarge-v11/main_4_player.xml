<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lifeLayout="http://schemas.android.com/apk/res/org.elliotglaysher.lifecounternonfree"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:padding="10dip"
    android:orientation="horizontal">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:lifeLayout="http://schemas.android.com/apk/res/org.elliotglaysher.lifecounternonfree"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="10dip"
        android:orientation="vertical">
        <org.elliotglaysher.lifecounternonfree.widgets.LifeLayout
            android:id="@+id/player_1_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            lifeLayout:nameShown="false" />
        <org.elliotglaysher.lifecounternonfree.widgets.LifeLayout
            android:id="@+id/player_2_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            lifeLayout:nameShown="false" />
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:lifeLayout="http://schemas.android.com/apk/res/org.elliotglaysher.lifecounternonfree"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="10dip"
        android:orientation="vertical">
        <org.elliotglaysher.lifecounternonfree.widgets.LifeLayout
            android:id="@+id/player_3_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            lifeLayout:nameShown="false" />
        <org.elliotglaysher.lifecounternonfree.widgets.LifeLayout
            android:id="@+id/player_4_layout"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            lifeLayout:nameShown="false" />
    </LinearLayout>
</LinearLayout>